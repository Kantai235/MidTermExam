<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/activity_news_list_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/rurumi" />

    <TextView
        android:id="@+id/activity_news_list_titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:singleLine="true"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/activity_news_list_subtitleText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_news_list_titleText"
        android:alpha="0.7"
        android:padding="8dp"
        android:singleLine="true" />


</RelativeLayout>
